<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> سایت خبری برنامه نویسی </title>
    <base href="">
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/style.css">
    <link href="https://cdn.rawgit.com/rastikerdar/sahel-font/v1.0.0-alpha23/dist/font-face.css" rel="stylesheet" type="text/css" />
    <script src="/Content/js/jquery.min.js"></script>
</head>
<body class="rtl" style="font-family: Sahel,sans-serif;">
    <script src="/Content/js/modernizr.js"></script>

    <!-- Top Menu -->
    <div class="top-menu">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-5">
                    <ul>
                        <li><a href=""><i class="fa fa-home"></i></a></li>
                        <li><a href=""><i class="fa fa-question-circle"></i></a></li>
                        <li><a href=""><i class="fa fa-envelope"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-7">
                    <span>امروز : @DateTime.Now.ToShamsi()</span>
                </div>
            </div>
        </div>
    </div>
    <!-- End Top Menu -->
    <!-- header -->
    <header class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <a href="" class="logo"><img src="/Content/img/log.png" alt="" title=""></a>
                    <div class="left-side">
                        <br />
                        <h1><a href="">سایت خبری برنامه نویسی</a></h1>
                        <h2> پایگاه اطلاع رسانی و خبری</h2>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
            <form action="/Search" method="get" class="border-radius">
                <input class="border-radius" type="text" name="q" placeholder=" دنبال چی میگردی؟! ">
                <button><i class="fa fa-search"></i></button>
            </form>
        </div>
            </div>
        </div>
    </header>
    <!-- End Header -->
    <!-- menu -->
    <nav class="main-menu">
        <div class="container">
            <span><i class="fa fa-th-list"></i></span>
            <ul>
                <li><a href="/"> صفحه اصلی </a></li>
                <li><a href="/Archive"> آرشیو خبرها </a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href=""> @User.Identity.Name خوش اومدی. </a></li>
                    <li><a href="/account/signout"> خروج از حساب </a></li>
                }
                else
                {
                    <li><a href="/account/login"> ورود به سایت </a></li>
                }

                <li>
                    @Html.Action("ShowGroupsInMenu", "News")
                </li>
            </ul>
        </div>
    </nav>
    <!-- End menu -->
        <div class="container margin-top-30">
            <div class="row">

                <aside class="col-md-4 col-sm-12 col-xs-12 pull-right">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="thumbnail">
                            <section class="last-news-side border-radius">
                                <header><i class="icons icon-star"></i> <h3>بخش مدیرت تبلیغات</h3></header>
                                <ul>
                                    <li>
                                        <a href="/Admin/PageGroups">مدریت گروه ها</a>
                                    </li>

                                    <li>
                                        <a href="/Admin/Pages">مدریت خبرها </a>
                                    </li>
                                </ul>
                            </section>
                        </div>
                    }

                    @Html.Action("ShowGroups", "News")
                    <!-- most views news -->
                    @Html.Action("TopNews", "News")
                    <!-- end most views news -->
                </aside>


                <div class="col-md-8 col-sm-12 col-xs-12 ">

                    @RenderBody()

                </div>
            </div>
        </div>

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <section class="access-links">
                            <header> دسترسی سریع </header>
                            <ul>
                                <li><a href="/"> صفحه اصلی </a></li>
                                <li><a href="/Archive"> آرشیو خبرها </a></li>
                                <li><a href="/account/login"> ورود به سایت  </a></li>
                            </ul>
                        </section>
                    </div>
                    <div class="col-md-5 col-md-offset-1 col-sm-12 col-xs-12">
                        <div class="socials">
                            <span> شبکه های اجتماعی  سایت</span>
                            <a href="https://github.com/barnamenevisi-info"><i class="fa fa-github"></i></a>
                            <a href="https://www.instagram.com/barnamenevis.info/?hl=en"><i class="fa fa-instagram"></i></a>
                            <a href="https://t.me/Theres_no_such_thing_as_security"><i class="fa fa-paper-plane"></i></a>
                            <div class="clearfix"></div>
                        </div>
                        <p>
                            تمامی حقوق مادی و معنوی این طرح متعلق به امیرحسین دشتی می باشد.
                        </p>
                    </div>
                </div>
            </div>
        </footer>

        <script src="/Content/js/bootstrap.min.js"></script>
        <script src="/Content/js/owl.carousel.js"></script>
        <script src="/Content/js/script.js"></script>
        @RenderSection("Scripts", false)
</body>
</html>


